<Window x:Class="WpfApp_talstelsel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_talstelsel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="hexaTextBox" HorizontalAlignment="Left" Margin="146,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="25" KeyDown="hexaTextBox_KeyDown"/>
        <TextBox x:Name="decimalTextBox" HorizontalAlignment="Left" Margin="468,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="25" IsEnabled="False"/>
        <Label Content="Hexadecimale waarde" HorizontalAlignment="Left" Margin="179,173,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Decimale waarde" HorizontalAlignment="Left" Margin="501,171,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="calcButton" HorizontalAlignment="Left" Margin="179,274,0,0" VerticalAlignment="Top" Width="88" Content="zet om"  Click="calcButton_Click"/>
        <Button x:Name="retryButton" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Width="88" Content="Opnieuw" Click="retryButton_Click"/>
        <Button x:Name="closeButton" HorizontalAlignment="Left" Margin="519,274,0,0" VerticalAlignment="Top" Width="88" Content="Sluiten" Click="closeButton_Click"/>

    </Grid>
</Window>
